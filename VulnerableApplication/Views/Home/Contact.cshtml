@{
    ViewData["Title"] = "Contact Page";
}

<div class="contactDiv shadow">
    <form class="formInDiv">
        <h4 style="text-align:center;font-weight:500;">Contact</h4>
        <div class="form-row mt-2">
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="Email" required>
            </div>
        </div>
        <div class="form-row mt-2">
            <div class="form-group">
                <label for="inputName">Name</label>
                <input type="text" class="form-control" id="inputName" placeholder="Name" required>
            </div>
        </div>
        <div class="form-row mt-2">
            <div class="form-group">
                <label for="inputMessage">Message</label>
                <textarea class="form-control" id="inputMessage" placeholder="Message"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-2" onclick="Submit()">Submit</button>
    </form>
</div>

<script>
    function Submit() {
        alert("Thank you for contacting us!");
        location.reload();
    }
</script>